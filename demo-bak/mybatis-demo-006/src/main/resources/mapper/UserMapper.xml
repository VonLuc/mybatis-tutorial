<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.UserMapper">
    <!--findById-->
    <select id="findById" parameterType="int" resultType="bean.User">
        select * from blog_db.user where id=#{id}
    </select>

    <!--insertUserV1-->
    <insert id="insertUserV1" parameterType="bean.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `blog_db`.`user` ( `name`, `email`, `password`)
        VALUES (#{name}, #{email}, #{password})
    </insert>

    <!--insertUserV2-->
    <parameterMap id="insertUser2ParamsMap" type="bean.User">
        <parameter property="name"/>
        <parameter property="email" />
        <parameter property="password" />
    </parameterMap>

    <insert id="insertUserV2" parameterType="bean.User" parameterMap="insertUser2ParamsMap" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `blog_db`.`user` ( `name`, `email`, `password`)
        VALUES (?, ?, ?)
    </insert>

</mapper>